    <decisions>
        <description>Here we Check Customer group HENKEL or Other</description>
        <name>Check_Customer_HENKEL</name>
        <label>Check Customer HENKEL</label>
        <locationX>446</locationX>
        <locationY>468</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>HENKEL_And_Status_Open</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Account.Group_Key__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>HENKEL</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Account.Group_Key__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_Weekday_And_24Hrs_Passed</targetReference>
            </connector>
            <label>HENKEL And Status Open</label>
        </rules>
        <rules>
            <name>Status_Open_And_Customer_Others</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Account.Group_Key__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>varNotHENKEL</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_Weekday_And_72Hrs_Passed</targetReference>
            </connector>
            <label>Status Open And Customer Others</label>
        </rules>
    </decisions>
