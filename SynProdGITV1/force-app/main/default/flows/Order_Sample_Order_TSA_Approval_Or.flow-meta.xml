    <decisions>
        <description>Checks if TSA Approval Needed or not.</description>
        <name>Check_if_TSCA_Approved_Needed_or_not</name>
        <label>Check if TSCA Approved Needed or not</label>
        <locationX>380</locationX>
        <locationY>287</locationY>
        <defaultConnector>
            <targetReference>TSA_Not_Needed_Stage</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_1</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.TSCA_Approval_Needed__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Checks the Status is Approve or Reject and According calls the different stages</description>
        <name>TSCA_Approval_Status_Check</name>
        <label>TSCA Approval Status Check</label>
        <locationX>182</locationX>
        <locationY>611</locationY>
        <defaultConnector>
            <targetReference>Rejection_Stage</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Rejected</defaultConnectorLabel>
        <rules>
            <name>Approved_TSA</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>TSA_Approver.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approve</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>TSA_Approver.Outputs.approvalDecision</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approve</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Approval_Stage</targetReference>
            </connector>
            <label>Approved</label>
        </rules>
